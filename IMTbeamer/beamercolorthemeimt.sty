\setbeamercolor{alerted text}{fg=imtRed} 
\setbeamercolor{example text}{fg=imtBlue} 
\setbeamercolor{copyright text}{fg=imtDarkBlue}

% Palettes
\setbeamercolor{palette primary}{fg=white, bg=imtDarkBlue} 
\setbeamercolor{palette secondary}{fg=imtDarkGrey,bg=imtGrey} 
\setbeamercolor{palette tertiary}{fg=imtLightBlue, bg=imtDarkGrey} 
